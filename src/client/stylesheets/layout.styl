body
  height 100%
  color red
.target
  width 500px
  height 200px
  background #dadada

.nghm_element
  position relative
  .nghm_multiple_wrap
    zIndex 200
    width inherit
    height inherit
  /*
    style transclude area
  */
  div.nghm_transclude
    position absolute
  /*
    style console
  */
  ul.nghm_console_wrap
    width 400px
    position absolute
    top 0
    left 0
    margin 0
    border solid 1px black
    -webkit-transition all 0.2s
    -moz-transition all 0.2s
    -ms-transition all 0.2s
    -o-transition all 0.2s
    transition: all 0.2s
    background white
  /*
    style message
  */
  .nghm_message_wrap
    zIndex 100
    display none
  &:hover
    .nghm_multiple_wrap
      width inherit
      height inherit
      background #9999aa50
      position absolute
      top -5px
      left -5px
      border dashed #00000050 5px
      p.nghm_message_wrap
        display block
        width inherit
        height inherit
        display:table-cell
        vertical-align middle
        text-align center
